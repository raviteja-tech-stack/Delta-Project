<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Enter title"
            value="<%=listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Title is not given</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter your description"
            class="form-control"
            required
          >
<%=listing.description %></textarea
          >
          <div class="invalid-feedback">Description is not given</div>
        </div>

        <div class="mb-3">
          <img src="<%= originalImgUrl %>" />
        </div>

        <div class="mb-3">
          <label for="image-link" class="form-label">Upload New Image</label>
          <input
            name="listing[image][filename]"
            class="form-control"
            type="file"
          >
          </input>
</div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">price</label>
            <input
              name="listing[price]"
              placeholder="Enter price"
              value="<%=listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price is not given</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="Enter country"
              value="<%=listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Counrty is not given</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Enter location"
            value="<%=listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is not given</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
  <br /><br />
</body>
