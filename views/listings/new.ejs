<% layout("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a new listing</h3>
      <form
        method="POST"
        action="/listings"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            placeholder="Add a cathcy title"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Title is not given</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            placeholder="Enter your description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Description is not given</div>
        </div>

        <div class="mb-3">
          <label for="image-link" class="form-label">Image</label>
          <input
            name="listing[image][url]"
            placeholder="Enter Image Url"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="image-link" class="form-label">Upload File</label>
          <input
            name="listing[image][filename]"
            class="form-control"
            type="file"
          />
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price is not given</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country is not given</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Jaipur, Rajasthan"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location is not given</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
      </form>
    </div>
  </div>
  <br /><br />
</body>
